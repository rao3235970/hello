/* pages/groupInfo/groupInfo.wxss */
button::after{
    border: none;
}
.bgn{
    display: block; 
    width: 100%;
    height: 100%;
    background-color:rgb(102, 102, 102); 
    filter:alpha(opacity=80);  
    -moz-opacity:0.8;  
    -khtml-opacity: 0.8; 
    opacity: 0.8; 
    position: fixed; 
    left: 0; 
    top: 0; 
    z-index: 999; 
    overflow: hidden;
}
.share{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 300rpx;
    line-height: 70rpx;
    text-align: center;
    background: #fff;
    z-index: 999999
}
.share .tit{
    font-size: 35rpx;
    font-weight: 600;
    padding: 30rpx 0;
    padding-bottom: 50rpx;
}
.share button{
    padding: 0;
    background: #fff;
    color: #888;
    font-size: 30rpx;
}
.share button image{
    width: 60rpx;
    height: 60rpx;
}
.share button text{
    display: block;
    line-height: 30rpx;
}
page{
    display: block;
    background: #f6f6f6;
}
image{
    width: 100%;
    height:auto;
    border:0;
    vertical-align:text-bottom;
}
.address{
    background: #fff;
    padding: 30rpx;
    font-size: 35rpx;
    line-height: 65rpx;
    margin-bottom: 23rpx;
}
.address .name{
    float: left;
    width: 400rpx;
    overflow: hidden;
}
.address .tel{
    float: right;
    width: 220rpx;
    text-align: right;
    overflow: hidden;
}
.address .add{
    font-size: 32rpx;
    width: 100%;
    overflow: hidden;
}
.orderInfo{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 35rpx;
    font-weight: 600;
    padding: 30rpx;
    background: #fff;
    overflow: hidden;
}
.orderInfo .img{
    display: block;
    width: 200rpx;
    height: 200rpx;
}
.orderInfo .right{
    display: block;
    width:450rpx;
    height: 200rpx;
}
.orderInfo .right .title{
    height: 92rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden; 
}
.orderInfo .right .price{
    margin-top:70rpx;
    color: #FF135B;
}
.total{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    font-size: 35rpx;
    background: #fff;
    overflow: hidden;
}
.total .price{
    float: left;
    width: 60%;
    line-height: 100rpx;
    padding: 0 2.5%
}
.total .price text{
    color: #FF135B;
}
.total .price .already{
    font-size: 30rpx;
    color: #454545;
    margin-left: 30rpx;
}
.total .confirm{
    float: left;
    width: 35%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #2F71F6;
    color: #fff;
}