/* pages/exchange/exchange.wxss */
.tips{
  text-align: center;
  margin-top:120rpx;

}
page{
    display: block;
    background: #f6f6f6;
}
image{
    width: 100%;
    height:100%;
}

.tabNav .nav{
    width:100%;
    height:100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    border-top: 1px solid #E5E5EA;
    border-bottom: 1px solid #E5E5EA;
    font-size: 32rpx;
    position: fixed;
    top: 0;
    z-index: 9999;
}
.tabNav .nav .tab{
    line-height:100rpx;
    text-align:center;
    flex:1;
    color:#333;
    font-weight:bold;
}
.tabNav .nav .active{
    line-height:100rpx;
    text-align:center;
    color:#0084FF;
    flex:1;
    font-weight:bold;
    border-bottom: 1px solid #0084FF
}
.tabNav .nav .message{
    width: 37rpx;
    height: 50rpx;
    padding: 0 30rpx;
    border-left: 1px solid #999;
}
.tabNav .nav .message image{
    width: 37rpx;
    height: 35rpx;
    margin-top: 10rpx;
}
.tabNav .show{
    display:block;
}
.tabNav .hidden{
    display:none;
}
.list{
    padding: 0 30rpx;
    background: #fff;
    overflow: hidden;
    margin-top: 100rpx;

}
.list .li{
    padding: 30rpx 0;
    margin-bottom: 23rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #E5E5E5;
    overflow: hidden;
}
.list .li:last-child{
    border-bottom: none;
}
.list .li .title{
    font-size: 35rpx;
    font-weight: 600;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
}
.list .li .text{
    /* display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center; */
    font-size: 35rpx;
    font-weight: 600;
    overflow: hidden;
}
.list .li .text text:first-child{
    display: block;
    float: left;
    max-width: 140rpx;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
    font-size: 27rpx;
}
.list .li .text text:last-child{
    display: block;
    float: left;
    width: 500rpx;
    font-size: 27rpx;
    font-weight: normal;
    color: #999;
    margin-left: 30rpx;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
}
.list .li .tag{
    font-size: 30rpx;
    color: #999;
    overflow: hidden;
}
.list .li .tag .more{
    float: left;
}
.list .li .tag .msg{
    float: right;
    width: 100rpx;
}
.list .li .tag .msg image{
    width: 32rpx;
    height: 30rpx;
    margin-right: 10rpx
}
.add{
    position: fixed;
    bottom: 150rpx;
    right: 50rpx;
}
.add image,cover-image{
    width: 100rpx;
    height: 100rpx;
}
.video .li{
    padding: 30rpx 30rpx 0 30rpx;
    background: #fff;
    margin-bottom: 25rpx;
    overflow: hidden;
}
.video .li .video{
    position: relative;
}
.video .li .video .videoImg{
    width: 100%;
    height: 350rpx;
}
.video .li .video .play{
    position: absolute;
    top: 135rpx;
    left: 45%;
    width: 80rpx;
    height: 80rpx;
}
.video .li .tag{
    font-size: 30rpx;
    color: #999;
    border-top: 1px solid #e5e5e5;
    line-height: 100rpx;
    margin-top: 20rpx;
    overflow: hidden;
}
.video .li .tag .title{
    float: left;
    width: 500rpx;
    font-size: 35rpx;
    color: #0F1D37;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
}
.video .li .tag .msg{
    float: right;
    width: 100rpx;
}
.video .li .tag .msg image{
    width: 32rpx;
    height: 30rpx;
    margin-right: 10rpx
}