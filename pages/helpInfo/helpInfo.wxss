/* pages/helpInfo/helpInfo.wxss */
page{
    display: block;
    background: #f6f6f6;
}
image{
    width: 100%;
    height:auto;
    border:0;
    vertical-align:text-bottom;
}
button::after{
    border: none;
}
.swiper{
    position: relative;
}
.swiper image{
    height: 350rpx;
}
.swiper .title{
    position: absolute;
    top: 30rpx;
    left: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #fff;
    padding: 5rpx;
    border-radius: 30rpx;
}
.swiper .title image{
    display: block;
    float: left;
    width: 50rpx;
    height: 50rpx;
    border-radius: 30rpx;
}
.swiper .title .name{
    float: left;
    font-size: 30rpx;
    padding: 0 20rpx;
    padding-right: 30rpx;
}
.swiper .rule{
    position: absolute;
    top: 30rpx;
    right: 0;
    height: 50rpx;
    line-height: 50rpx;
    background: #FF135B;
    font-size: 28rpx;
    color: #fff;
    padding: 5rpx 20rpx;
    border-radius: 30rpx 0 0 30rpx;
}
.title{
    font-size: 35rpx;
    font-weight: 600;
    padding: 30rpx;
    line-height: 60rpx;
    background: #fff;
    margin-bottom: 23rpx;
    overflow: hidden;
}
.title .tit{
    margin-bottom: 5rpx;
}
.title .price{
    color: #FF135B;
    overflow: hidden;
}
.title .price text{
    float: right;
    font-size: 30rpx;
    color: #333;
    font-weight: normal;
}
.title .now{
    margin-top: 20rpx;
    font-size: 30rpx;
    line-height: 80rpx;
}
.title .now .progress text:first-child{
    color: #FF135B;
}
.title .now .progress text:last-child{
    display: block;
    float: right;
    color: #000;
}
.list{
    font-size: 35rpx;
    font-weight: 600;
    margin-bottom: 110rpx;
    background: #fff;
}
.list .tab{
    padding: 30rpx;
    border-bottom: 1px solid #F6F6F6;
}
.list .li{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 35rpx 30rpx;
    border-bottom: 1px solid #F6F6F6;
}
.list .li .photo{
    width: 65rpx;
    height: 65rpx;
    border-radius: 50rpx;
}
.list .li .name{
    width: 400rpx;
}
.list .li .price{
    width: 200rpx;
    color: #9E9E9E;
    font-size: 30rpx;
    font-weight: normal;
    text-align: right;
}
.list .tips{
    font-size: 30rpx;
    text-align: center;
    padding: 50rpx 0;
    font-weight: normal
}
.description{
    display: block;
    position: fixed;
    top: 20%;
    left: 10%;
    width: 80%;
    min-height: 300rpx;
    border-radius: 20rpx;
    background: #fff;
    z-index: 99999;
}
.description .tit{
    font-size: 35rpx;
    text-align: center;
    padding: 40rpx 0 25rpx 0;
}
.description .content{
    padding: 0 30rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    color: #3F3F3F
}
.description .content text{
    display: block;
}
.description .confirm{
    font-size: 35rpx;
    text-align: center;
    line-height: 100rpx;
    color: #2F71F6;
    margin-top: 50rpx;
    border-top: 1px solid #E5E5E5;
}
.bgn{
    display: block; 
    width: 100%;
    height: 100%;
    background-color:rgb(102, 102, 102); 
    filter:alpha(opacity=80);  
    -moz-opacity:0.8;  
    -khtml-opacity: 0.8; 
    opacity: 0.8; 
    position: fixed; 
    left: 0; 
    top: 0; 
    z-index: 999; 
    overflow: hidden;
}
.share{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 300rpx;
    line-height: 70rpx;
    text-align: center;
    background: #fff;
    z-index: 999999
}
.share .tit{
    font-size: 35rpx;
    font-weight: 600;
    padding: 30rpx 0;
    padding-bottom: 50rpx;
}
.share button{
    padding: 0;
    background: #fff;
    color: #888;
    font-size: 30rpx;
}
.share button image{
    width: 60rpx;
    height: 60rpx;
}
.share button text{
    display: block;
    line-height: 30rpx;
}
.footer{
    position: fixed;
    bottom: 0;
    width: 100%;
}
.footer .btn{
    height: 110rpx;
    line-height: 110rpx;
    font-size: 35rpx;
    color: #fff;
    text-align: center;
    border-radius: 0;
    background: #2F71F6;
}