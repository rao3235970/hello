/* pages/information-details/information-details.wxss */
@import "../../wxParse/wxParse.wxss";
view{
  overflow:hidden;

}
image{
  text-align:center;

}
button::after{
    border: none;
}
.bgn{
    display: block; 
    width: 100%;
    height: 100%;
    background-color:rgb(102, 102, 102); 
    filter:alpha(opacity=80);  
    -moz-opacity:0.8;  
    -khtml-opacity: 0.8; 
    opacity: 0.8; 
    position: fixed; 
    left: 0; 
    top: 0; 
    z-index: 999; 
    overflow: hidden;
}
.share{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 300rpx;
    line-height: 70rpx;
    text-align: center;
    background: #fff;
    z-index: 999999
}
.share .tit{
    font-size: 35rpx;
    font-weight: 600;
    padding: 30rpx 0;
    padding-bottom: 50rpx;
}
.share button{
    padding: 0;
    background: #fff;
    color: #888;
    font-size: 30rpx;
}
.share button image{
    width: 60rpx;
    height: 60rpx;
}
.share button text{
    display: block;
    line-height: 30rpx;
}
