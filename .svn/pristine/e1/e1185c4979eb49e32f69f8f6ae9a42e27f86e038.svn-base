// pages/video/video.js
const app = getApp()
var uploadImage = require('../../utils/uploadFile.js');
var util = require('../../utils/util.js');
Page({

  /**
   * 页面的初始数据
   */
  data: {
    api: app.data.HOST,
    upimg: true,
    upvideo: true,
    img: "",
    video: ""
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },
  //选择图片上传封面
  upimg: function () {
    var that = this;
    wx.chooseImage({
      count: 1, // 默认最多一次选择1张图
      sizeType: ['original', 'compressed'], // 可以指定是原图还是压缩图，默认二者都有
      sourceType: ['album', 'camera'], // 可以指定来源是相册还是相机，默认二者都有
      success: function (res) {
        // 返回选定照片的本地文件路径列表，tempFilePath可以作为img标签的src属性显示图片
        var tempFilePaths = res.tempFilePaths;
        var nowTime = util.formatTime(new Date());
        console.log(nowTime)
        //支持多图上传
        for (var i = 0; i < res.tempFilePaths.length; i++) {
          //显示消息提示框
          wx.showLoading({
            title: '上传中' + (i + 1) + '/' + res.tempFilePaths.length,
            mask: true
          })

          //上传图片
          //你的域名下的/cbb文件下的/当前年月日文件下的/图片.png
          //图片路径可自行修改
          uploadImage(res.tempFilePaths[i], 'images/' + nowTime + '/',
            function (result) {
              console.log("上传成功图片地址为：", result);
              that.setData({
                upimg: false,
                img:result
              });
              wx.hideLoading();
            }, function (result) {
              console.log("上传失败", result);
              wx.hideLoading()
            }
          )
        }
      }
    })
  },
  //上传视频
  upvideo: function () {
    var that = this;
    wx.chooseVideo({
      sourceType: ['album','camera'],
      maxDuration: 60,
      camera: 'back',
      success: function (res) {
        var tempFilePaths = res.tempFilePath;
        var nowTime = util.formatTime(new Date());
        console.log(nowTime)
        // for (var i = 0; i < res.tempFilePaths.length; i++) {
        //   //显示消息提示框
        //   wx.showLoading({
        //     title: '上传中' + (i + 1) + '/' + res.tempFilePaths.length,
        //     mask: true
        //   })

          //上传视频
          uploadImage(res.tempFilePath, 'video/' + nowTime + '/',
            function (result) {
              console.log("上传成功视频地址为：", result);
              that.setData({
                upvideo: false,
                video:result
              });
              wx.hideLoading();
            }, function (result) {
              console.log("上传失败", result);
              wx.hideLoading()
            }
          )
        // }
      }
    })
  },

  videoSubmit: function (e) {//视频发布
    var that = this;
    let user_id = wx.getStorageSync("user_id");
    let video_title = e.detail.value.video_title;
    let video_cover = that.data.img;
    let video_content = that.data.video;
    if (user_id == "") {
      wx.showModal({
        title: '提示',
        content: '请先授权登录！',
        showCancel: false,
        success: function (res) {
          if (res.confirm) {
            wx.redirectTo({
              url: '/pages/login/login'
            })
          }
        }
      })
    } else if (video_title == "") {
      wx.showModal({
        title: '提示',
        content: '请填写视频标题！',
        showCancel: false,
        success: function (res) {
          if (res.confirm) {
          }
        }
      })
    } else if (video_cover == "") {
      wx.showModal({
        title: '提示',
        content: '请上传视频封面！',
        showCancel: false,
        success: function (res) {
          if (res.confirm) {
          }
        }
      })
    } else if (video_content == "") {
      wx.showModal({
        title: '提示',
        content: '请上传视频！',
        showCancel: false,
        success: function (res) {
          if (res.confirm) {
          }
        }
      })
    } else {
      wx.request({
        url: app.data.HOST + 'v1/videoadd',
        header: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        data: { user_id: user_id, video_title: video_title, video_cover: video_cover, video_content: video_content },
        method: "POST",
        success: res => {
          console.log(res.data)
          if (res.data.status == 200) {
            wx.showModal({
              title: '提交成功',
              content: '您的视频已发布！',
              showCancel: false,
              success: function (res) {
                if (res.confirm) {
                  wx.navigateTo({
                    url: '/pages/exchange/exchange'
                  })
                }
              }
            })
          }
        }
      })
    }
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})