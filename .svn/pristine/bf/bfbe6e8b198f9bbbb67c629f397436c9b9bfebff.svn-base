/* 加减input框 */
/*主容器*/
.stepper {
  width:176rpx;
  height:52rpx;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 6rpx;
  float: left;
  margin-top: 60rpx;
  margin-left: 158rpx;
}
/*加号和减号*/
.stepper text {
  float: left;
  width: 38rpx;
  line-height: 52rpx;
  text-align: center;
  color: #333333;
  margin-left: 6rpx;
}
/*数值*/
.stepper input {
  width: 80rpx;
  height: 52rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  color: #333333;
}
/*普通样式*/
.stepper .normal {
  color:black;
}
/*禁用样式*/
.stepper .disable {
  color: #ccc;
}
