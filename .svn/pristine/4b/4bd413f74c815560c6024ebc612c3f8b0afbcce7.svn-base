// pages/news/news.js
const app = getApp()
Page({

  /** 
   * 页面的初始数据
   */
  data: {
    api: app.data.HOST,
    // fullPicUrl: app.data.fullPicUrl,//拼接的图片地址
    // imgUrls: {},
    newsList: {},
    page: 1
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    let that = this
    // that.List()
  },
  //加载资讯列表
  List: function () {
    var that = this;
    wx.request({
      url: app.data.HOST + 'v1/question?page=' + that.data.page,
      method: "get",
      header: {
        'content-type': 'application/x-www-form-urlencoded' // 默认值
      },
      data: {
        user_id: wx.getStorageSync("user_id"),
        page: that.data.page,
        limit: "10"
      },
      success: res => {
        var data = res.data;
        console.log(data)
        if (res.data.status == 200) {

          if (that.data.page == 1) {
            that.setData({
              newsList: res.data.mes.data
            })

          } else if (res.data.mes.data.length == 0) {
            wx.hideLoading();
            wx.showToast({ title: "没有更多数据！", icon: "none" })
          } else {
            wx.hideLoading();
            var newsList = that.data.newsList;
            for (var i = 0; i < res.data.mes.data.length; i++) {
              newsList.push(res.data.mes.data[i]);
            }
            that.setData({
              newsList: newsList
            })
          }
        } else {
          wx.showToast({ title: "网络请求失败请稍后重试！", icon: "none" })
        }
      }
    });
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    let that = this
    this.setData({
      page: 1
    });
    that.List()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    wx.showLoading({
      title: '加载中……',
    });
    var page = this.data.page + 1;
    this.setData({ ["page"]: page });
    this.List();
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})