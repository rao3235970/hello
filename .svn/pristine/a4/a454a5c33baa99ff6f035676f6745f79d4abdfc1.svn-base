/* pages/helpInfo/helpInfo.wxss */
page{
    display: block;
    background: #f6f6f6;
}
image{
    width: 100%;
    height:auto;
    border:0;
    vertical-align:text-bottom;
}
button::after{
    border: none;
}
.swiper{
    position: relative;
    margin-bottom: 23rpx;
}
.swiper image{
    height: 350rpx;
}
.swiper .title{
    position: absolute;
    top: 30rpx;
    left: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #fff;
    padding: 5rpx;
    padding-right: 20rpx;
    border-radius: 30rpx;
}
.swiper .title image{
    display: block;
    float: left;
    width: 50rpx;
    height: 50rpx;
    border-radius: 30rpx;
}
.swiper .title .name{
    float: left;
    font-size: 30rpx;
    margin-left: 10rpx;
}
.swiper .rule{
    position: absolute;
    top: 30rpx;
    right: 0;
    height: 50rpx;
    line-height: 50rpx;
    background: #FF135B;
    font-size: 28rpx;
    color: #fff;
    padding: 5rpx 20rpx;
    border-radius: 30rpx 0 0 30rpx;
}
.title{
    padding: 30rpx;
    background: #fff;
}