// pages/groupInfo/groupInfo.js
const app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    api: app.data.HOST,
    groupInfo:""
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    let that = this;
    that.groupInfo(options)
    that.setData({
      order: options.order
    });
  },
  groupInfo: function (options) {//订单信息
    let order = options.order;
    console.log(order)
    wx.request({
      url: app.data.HOST + 'v1/ready',
      method: "post",
      header: {
        'content-type': 'application/x-www-form-urlencoded' // 默认值
      },
      data: {
        orderno: order,
      },
      success: res => {
        that.setData({
          groupInfo: res.data.data
        });
        console.log(res)
      }
    })
  },
  confirm: function () {//确认支付
    let that = this;
    let order = that.data.order
    wx.request({
      url: app.data.HOST + 'v1/pay',
      method: "post",
      header: {
        'content-type': 'application/x-www-form-urlencoded' // 默认值
      },
      data: {
        orderno: order,
      },
      success: res => {
        if (res.statusCode == 200) {
          let result = res.data;
          wx.requestPayment({
            timeStamp: result.timeStamp,
            nonceStr: result.nonceStr,
            package: result.package,
            signType: result.signType,
            paySign: result.paySign,
            success(res) {
              wx.navigateBack({
                delta: 1
              })
              console.log("支付成功！")
            },
            fail(res) {
              console.log("支付失败！")
            }
          })
        }
      }
    })
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})